{
    "name": "hive-layout",
    "version": "0.1.3",
    "description": "Simple UI framework, for a simple web application",
    "keywords": [
        "components",
        "layout",
        "ui",
        "uxf"
    ],
    "homepage": "https://github.com/hivesolutions/layout#readme",
    "bugs": {
        "url": "https://github.com/hivesolutions/layout/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/hivesolutions/layout.git"
    },
    "license": "Apache-2.0",
    "author": "Hive Solutions",
    "files": [
        "index.js",
        "css/**/*.css",
        "fonts/**/*.ttf",
        "images/**/*.gif",
        "images/**/*.png",
        "js/**/*.js",
        "test/**/*.js"
    ],
    "main": "js/layout.js",
    "scripts": {
        "lint": "eslint \"./js/layout.js\"",
        "test": "mocha --recursive",
        "prettier": "prettier \"./*.{js,json}\" \"./{js,test}/**/*.{js,json}\" --write",
        "upgrade": "npx sort-package-json && ncu -u"
    },
    "dependencies": {
        "jquery": "^3.3.1"
    },
    "devDependencies": {
        "eslint": "^5.15.3",
        "eslint-config-hive": "^0.1.8",
        "mocha": "^6.0.2",
        "npm-check-updates": "^3.1.1",
        "prettier": "^1.16.4",
        "prettier-config-hive": "^0.1.1",
        "sort-package-json": "^1.21.0"
    }
}
